<Window x:Class="HW_25._11._23_client_.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="360" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Логін:" Margin="40" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox Name="UsernameTextBox" Width="100" Height="25" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <TextBlock Text="Пароль:" Grid.Row="1" Margin="40" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <PasswordBox Name="PasswordTextBox" Width="100" Height="25" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button Content="Увійти" Grid.Row="2" Grid.Column="1" Click="LoginButton_Click" Width="100"  Height="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
